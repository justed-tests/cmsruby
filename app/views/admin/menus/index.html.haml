%h1 Listing menus

%table.table
  %thead
    %tr
      %th Name
      %th
      %th

  %tbody
    - @menus.each do |menu|
      %tr
        %td
          = menu.name
          %ul
            - menu.menu_items.each do |item|
              %li
                = link_to item.title, url_for_menu_item(item)

        %td= link_to 'Edit', edit_admin_menu_path(menu)
        %td= link_to 'Destroy', admin_menu_path(menu), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Menu', new_admin_menu_path, class: 'btn btn-primary'
